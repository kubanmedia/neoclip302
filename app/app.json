{
  "expo": {
    "name": "NeoClip",
    "slug": "neoclip",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.neoclip.app",
      "buildNumber": "1",
      "config": {
        "googleMobileAdsAppId": "YOUR_ADMOB_IOS_APP_ID"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0a0a"
      },
      "package": "com.neoclip.app",
      "versionCode": 1,
      "config": {
        "googleMobileAdsAppId": "YOUR_ADMOB_ANDROID_APP_ID"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow NeoClip to access your microphone for voice prompts."
        }
      ]
    ],
    "extra": {
      "apiBaseUrl": "https://your-vercel-app.vercel.app",
      "admobBannerId": "ca-app-pub-xxxxxxxxxxxxx/yyyyyyyyyy",
      "admobRewardedId": "ca-app-pub-xxxxxxxxxxxxx/zzzzzzzzzz",
      "eas": {
        "projectId": "your-eas-project-id"
      }
    },
    "owner": "your-expo-username"
  }
}
